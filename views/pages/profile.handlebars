<article>
    <h1>My Profile</h1>
    <section>
        <h2>My Items Up For Bid</h2>
        {{#each myItems}}
        <div>
            <h3><a href="/items/view/{{_id}}">{{itemName}}</a></h3>
            <div class='img-container'>
                <img src="../../public/items/{{itemImage}}" class="item-img"/>
                {{#if sold}}
                    <img src="../../public/img/sold.png" class="sold-overlay"/>
                {{/if}}
            </div>
        </div>
        {{/each}}
        <br/>
        <a href="/items/new"> Auction New Item </a>
    </section>
    <section>
        <h2>My Bids</h2>
        {{#each myBids}}
        <div>
            <h3><a href="/items/view/{{_id}}">{{itemName}}</a></h3>
            <div class='img-container'>
                <img src="../../public/items/{{itemImage}}" class="item-img"/>
                {{#if sold}}
                    <img src="../../public/img/sold.png" class="sold-overlay"/>
                {{/if}}
            </div>
            {{#if winning}}
                {{#if sold}}
                    <p>You won this item!</p>
                {{else}}
                    <p>You currently have the highest bid for this item!</p>
                {{/if}}
            {{else}}
                {{#if sold}}
                    <p>You did not win this item.</p>
                {{else}}
                    <p>Someone outbid you - place a higher bid if you want to win.</p>
                {{/if}}
            {{/if}}
        </div>
        {{/each}}
    </section>
</article>