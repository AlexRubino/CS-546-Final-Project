
<p>Sign up form</p>
    <form method ="POST" action="/items/new" id="login-form">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" placeholder="Enter your item name here"/>
        <label for="short_description">Short Description:</label>
        <input type="text" name="short_description" id="short_description" placeholder="Enter your short description here"/>
        <label for="item_img">Image:</label>
        <input type="file" id="item_img" name="item_img" accept="image/*">
        <label for="starting_bid">Starting Bid:</label>
        <input type="number" name="starting_bid" id="starting_bid" placeholder="Enter your starting bid here"/>       
                <button type="submit">Submit</button>
      </form>




