<div id="new-content"></div>
<div>
  {{#unless enter}}
  <form id="login-form">
    <label for="username">AJAX Username: <input id="username" type="text" placeholder="Enter your username here" />
    </label>
    <label for="password">AJAX Password: <input id="password" type="password"
        placeholder="Enter your password here" /></label>
    <input type="submit" value="Submit" />
  </form>
  {{/unless}}
</div>

{{#if enter}}
<p class="enter">Welcome, {{username}}! <a href="/profile">Go to My Profile</a></p>
{{/if}}

{{#if hasErrors}}
<p class="error">You have supplied a wrong username and/or password.</p>
{{/if}}

{{#if nothing}}
<p class="error">You must enter a username and password.</p>
{{/if}}

{{#if unknown}}
<p class="error">You must log in to view the private page.</p>
{{/if}}